keybind = alt+right=next_tab

# zellij-like prefix controlled keybindings
keybind = alt+t>n=new_tab
keybind = alt+b>f=toggle_fullscreen

# splits
keybind = alt+p>r=new_split:right
keybind = alt+p>d=new_split:down
keybind = alt+p>e=equalize_splits
keybind = alt+p>z=toggle_split_zoom

# split navigation 
keybind = alt+p>h=goto_split:left
keybind = alt+p>j=goto_split:bottom
keybind = alt+p>k=goto_split:top
keybind = alt+p>l=goto_split:right
keybind = alt+p>left=goto_split:left
keybind = alt+p>down=goto_split:bottom
keybind = alt+p>up=goto_split:top
keybind = alt+p>right=goto_split:right
