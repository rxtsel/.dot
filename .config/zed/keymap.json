[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "space e": "workspace::ToggleRightDock",
      "z": "project_panel::CollapseAllEntries",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
      "x": "project_panel::Cut",
      "y": "project_panel::Copy",
      "p": "project_panel::Paste"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": [
        "vim::PushOperator",
        {
          "AddSurrounds": {}
        }
      ]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-n": "workspace::NewTerminal",
      "ctrl-w z": "workspace::ToggleZoom",
      "ctrl-l": "terminal::Clear"
    }
  },
  {
    "context": "Editor || Workspace",
    "bindings": {
      "space q": "pane::CloseActiveItem",
      "space Q": "zed::Quit"
    }
  },
  {
    "context": "EmptyPane || SharedScreen || vim_mode == normal",
    "bindings": {
      "; f": ["file_finder::Toggle", { "separate_history": true }],
      "; o": "projects::OpenRecent",
      "s v": "pane::SplitRight",
      "s s": "pane::SplitDown",
      "space e": "project_panel::ToggleFocus",
      "space g g": ["task::Spawn", { "task_name": "Lazygit" }]
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "ctrl-w z": "workspace::ToggleZoom",
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "g ]": "editor::GoToDiagnostic",
      "g [": "editor::GoToPrevDiagnostic",
      "g shift-r": "editor::FindAllReferences",
      "shift-k": "editor::Hover",
      "space c a": "editor::ToggleCodeActions",
      "space c r": "editor::Rename",
      "space w": "workspace::Save",
      "space g b": "editor::ToggleGitBlame",
      "space g h d": "editor::ToggleHunkDiff",
      "space g h r": "editor::RevertSelectedHunks",
      "space t i": "editor::ToggleInlayHints",
      "space g r": "editor::FindAllReferences",
      "space s s": "outline::Toggle",
      "space x x": "diagnostics::Deploy"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  }
]
